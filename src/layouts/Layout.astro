---
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Professional portfolio of Ting-Wei Lin - Journalist" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,700;1,400&family=Lato:wght@400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<main>
			<Header />
			<Navigation />
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--font-mono: 'Space Mono', monospace;
		--font-sans: 'Lato', sans-serif;
	}
	
	html {
		font-family: var(--font-sans);
		background: #ffffff;
		color: #2d2d2d;
		font-size: 16px;
	}

	body {
		margin: 0;
		min-height: 100vh;
	}

	main {
		margin: auto;
		padding: 2rem;
		max-width: 1200px;
	}

	* {
		box-sizing: border-box;
	}
</style>