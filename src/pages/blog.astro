---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "Sample Blog Post 1",
    date: "March 2024",
    excerpt: "Brief excerpt from your blog post...",
    url: "/blog/post-1"
  },
  {
    title: "Sample Blog Post 2",
    date: "February 2024",
    excerpt: "Another brief excerpt from your blog post...",
    url: "/blog/post-2"
  },
  {
    title: "Sample Blog Post 3",
    date: "January 2024",
    excerpt: "Yet another brief excerpt from your blog post...",
    url: "/blog/post-3"
  }
];
---

<Layout title="Blog - Ting-Wei Lin">
  <div class="blog-grid">
    {posts.map(post => (
      <article class="blog-post">
        <time>{post.date}</time>
        <h2>{post.title}</h2>
        <p>{post.excerpt}</p>
        <a href={post.url} class="read-more">Read â†’</a>
      </article>
    ))}
  </div>
</Layout>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    margin: 3rem auto;
    max-width: 1100px;
  }

  .blog-post {
    display: flex;
    flex-direction: column;
  }

  time {
    color: #666;
    font-size: 0.75rem;
  }

  h2 {
    font-size: 0.875rem;
    font-weight: 700;
    margin: 0.5rem 0;
  }

  p {
    font-size: 0.875rem;
    margin: 0.5rem 0;
    flex-grow: 1;
  }

  .read-more {
    color: #000;
    text-decoration: none;
    font-size: 0.75rem;
    margin-top: auto;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>