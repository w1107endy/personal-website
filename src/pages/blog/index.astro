---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Blog - Your Name">
  <main>
    <h1>Blog</h1>
    <div class="blog-grid">
      <article class="blog-post">
        <time>March 2024</time>
        <h2>Your Blog Post Title</h2>
        <p>Brief excerpt from your blog post...</p>
        <a href="/blog/post-1">Read More</a>
      </article>
      <!-- Add more blog posts -->
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 65ch;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
  }

  .blog-post {
    border-bottom: 1px solid #eee;
    padding-bottom: 2rem;
  }

  time {
    color: #666;
    font-size: 0.9rem;
  }

  h2 {
    margin: 0.5rem 0;
  }

  a {
    color: #2d2d2d;
    text-decoration: none;
    font-weight: 500;
  }

  a:hover {
    text-decoration: underline;
  }
</style>